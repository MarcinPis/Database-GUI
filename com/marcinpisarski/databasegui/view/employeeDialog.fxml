<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane fx:controller="com.marcinpisarski.databasegui.DialogController"
            xmlns:fx="http://javafx.com/fxml">

    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="firstNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Second Name:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="lastNameField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Department:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <ComboBox fx:id="departmentSelector" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Mailing group:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <ListView fx:id="mailingGroupsList" GridPane.rowIndex="3" GridPane.columnIndex="1" />
        </GridPane>
    </content>

</DialogPane>